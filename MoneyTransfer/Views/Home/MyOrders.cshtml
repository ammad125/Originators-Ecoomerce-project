<div class="page-area">
    <div class="breadcumb-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="breadcrumb text-center">
                    <div class="section-headline white-headline text-center">
                        <h3>My Orders</h3>
                    </div>
                    <ul>
                        <li class="home-bread">Home</li>
                        <li>My Orders</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="how-to-area bg-color area-padding">
    <div class="all-services">
        <div class="container">

            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for Transaction ID.." title="Type in a name">

            <table class="table table-bordered table-dark" id="myTable">
                <thead>
                    <tr>
                        <th style="text-align: center">Trans_ID</th>
                        <th style="text-align: center">Username</th>
                        <th style="text-align: center">Price</th>
                        <th style="text-align: center">Name</th>
                        <th style="text-align: center">Product</th>
                        <th style="text-align: center">Quantity</th>
                        <th style="text-align: center">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.trans_id</td>
                            <td>@item.username</td>
                            <td>@item.price</td>
                            <td>@item.name</td>
                            <td>@item.product</td>
                            <td>@item.quantity</td>
                            <td>@item.total</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

